<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <TextView
        android:id="@+id/textTitleNewReservation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:text="Create a Reservation"
        android:textSize="28sp"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView1"
        android:id="@+id/button_group_select">

        <Button
            android:id="@+id/checkin_date_button"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textColor="#4D4D4D"
            android:textSize="14sp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#A8A8A8"
            android:shadowRadius="5"
            android:text="Check-in Date" />

        <TextView
            android:id="@+id/time_in_spinner_text"
            android:text="Hour: "
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_centerVertical="false"
            android:layout_toRightOf="@+id/checkin_date_button"/>

        <Spinner
            android:id="@+id/time_in_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="80dp"
            android:layout_toRightOf="@+id/checkin_date_button"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/textTitleNewReservation"
        android:text="Select Your Check-in"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/check_in_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/button_group_select"
        android:layout_marginTop="14dp"
        android:textColor="#000000"
        android:text="Check-In Date:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/check_in_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/check_in_date"
        android:layout_marginTop="14dp"
        android:textColor="#000000"
        android:text="Check-In Time:"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView2"
        android:id="@+id/button_group_select2">

        <Button
            android:id="@+id/checkout_date_button"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textColor="#4D4D4D"
            android:textSize="14sp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#A8A8A8"
            android:shadowRadius="5"
            android:text="Check-out Date" />

        <TextView
            android:id="@+id/time_out_spinner_text"
            android:text="Hour: "
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/checkout_date_button"/>

        <Spinner
            android:id="@+id/time_out_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="80dp"
            android:layout_toRightOf="@+id/checkout_date_button"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/check_in_time"
        android:textColor="#000000"
        android:text="Select Your Check-out"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/check_out_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/button_group_select2"
        android:layout_marginTop="14dp"
        android:textColor="#000000"
        android:text="Check-Out Date:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/check_out_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:textColor="#000000"
        android:layout_below="@+id/check_out_date"
        android:layout_marginTop="14dp"
        android:text="Check-Out Time:"
        android:textSize="16sp" />
    <Button
        android:id="@+id/check_reservation_price_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Price"
        android:layout_margin = "5dp"
        android:layout_below="@+id/check_out_time"
        android:layout_alignParentRight="true" />
</RelativeLayout>