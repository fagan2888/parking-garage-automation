<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.glleung.parkinggarageautomation">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainLogin"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main"
            android:label="@string/title_activity_main_screen"></activity>
        <activity
            android:name=".new_user"
            android:label="@string/title_activity_new_user"></activity>
        <activity
            android:name=".register_vehicle"
            android:label="@string/title_activity_register_vehicle"></activity>
        <activity
            android:name=".create_reservation"
            android:label="@string/title_activity_create_reservation"></activity>
        <activity
            android:name=".create_reservation_time"
            android:label="@string/title_activity_create_reservation_time"></activity>
        <activity
            android:name=".RegisteredVehicles"
            android:label="@string/title_activity_registered_vehicles"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
